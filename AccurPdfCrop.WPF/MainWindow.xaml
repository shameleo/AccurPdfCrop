<Window x:Class="AccurPdfCrop.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:AccurPdfCrop.WPF"
        Title="MainWindow" Height="550" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="FileOpen_Click"/>
                <MenuItem Header="_Crop &amp; Save" />
            </MenuItem>
        </Menu>
        <WrapPanel x:Name="mergePanelsView" Background="#FFF0F0F0">
            <s:MergePanel Margin="6" Height="303" Width="310"/>
            <s:MergePanel Margin="6" Height="303" Width="310"/>
        </WrapPanel>
    </DockPanel>
</Window>
